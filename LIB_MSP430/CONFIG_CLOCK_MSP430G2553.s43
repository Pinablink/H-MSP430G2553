#include "msp430g2553.h" 
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
              NAME    CONFIG_CLOCK_MSP430G2553
;----------------------------------------------------------------------------------------------                                         
              PUBLIC  CONFIG_16MHZ, CONFIG_12MHZ, CONFIG_8MHZ, CONFIG_1MHZ
              RSEG    CODE                   
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
CONFIG_16MHZ
;----------------------------------------------------------------------------------------------                                         
              MOV.B     &CALBC1_16MHZ,&BCSCTL1
              MOV.B     &CALDCO_16MHZ,&DCOCTL    
              RET
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
CONFIG_12MHZ
;----------------------------------------------------------------------------------------------                                         
              MOV.B     &CALBC1_12MHZ,&BCSCTL1
              MOV.B     &CALDCO_12MHZ,&DCOCTL    
              RET
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
CONFIG_8MHZ
;----------------------------------------------------------------------------------------------                                         
              MOV.B     &CALBC1_8MHZ,&BCSCTL1
              MOV.B     &CALDCO_8MHZ,&DCOCTL    
              RET
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
CONFIG_1MHZ
;----------------------------------------------------------------------------------------------                                         
